         {default_eval_interval, 60}]},

  {maintainers, ["Tristan Sloughter", "Bryan Hughes", "Evan Vigil-McClanahan", "Andrew Varner"]},
  {licenses, ["Apache 2"]},
  {links, ["https://github.com/gofactory/erleans"]}
 ]}.
