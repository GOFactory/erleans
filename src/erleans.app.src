{application, erleans,
 [{description, "Erleans: Like Orleans but Erlang"},
  {vsn, "0.1.0"},
  {registered, []},
  {mod, { erleans_app, []}},
  {applications,
   [kernel,
    stdlib,
    lager,
    sasl,
    uuid,
    lasp,
    lasp_pg,
    gproc,
    sbroker,
    hash_ring,
    erlware_commons
   ]},
